@model IEnumerable<AgendaApp.Models.Tarefa>

@{
    ViewBag.Title = "Lista de Tarefas";
}

<h2>Lista de Tarefas</h2>

<p class="btn btn-default">
    @Html.ActionLink("Criar nova tarefa", "Create")
</p>
<hr />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cadastrado_em)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dataentrega)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.concluida)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.titulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cadastrado_em)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dataentrega)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.concluida)
        </td>
        <td>
            <button> @Html.ActionLink("Editar", "Edit", new { id = item.id })</button> |
            <button>@Html.ActionLink("Detalhes", "Details", new { id = item.id })</button> |
            <button>@Html.ActionLink("Deletar", "Delete", new { id = item.id })</button>
        </td>
    </tr>
}

</table>
