@model IEnumerable<AgendaApp.Models.Tarefa.Tarefa>

@{
    ViewBag.Title = "Lista de Tarefas";
}

<h2>Lista de Tarefas</h2>

<p>
    @Html.ActionLink("Criar nova tarefa", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cadastrado_em)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dataentrega)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.concluida)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.titulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cadastrado_em)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dataentrega)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.concluida)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.id }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.id }) |
            @Html.ActionLink("Deletar", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
